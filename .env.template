# UpnAssist Environment Variables
# Copy this file to .env and fill in your values

# Authentication
VITE_AUTH_SECRET_KEY=your-secret-key-here
VITE_SESSION_TIMEOUT=3600000

# Chat System
VITE_SOCKET_SERVER_URL=https://your-socket-server.com
VITE_CHAT_ROOM_PASSWORD=your-room-password
VITE_CHAT_MAX_USERS=50

# AI Services
VITE_OPENROUTER_API_KEY=sk-or-your-key-here
VITE_OLLAMA_ENDPOINT=http://localhost:11434

# Email System
VITE_SMTP_HOST=smtp.unavarra.es
VITE_SMTP_PORT=587
VITE_SMTP_USER=your-email@unavarra.es
VITE_SMTP_PASS=your-app-password

# Security
VITE_ENCRYPTION_KEY=your-256-bit-key-here
VITE_CSRF_TOKEN_EXPIRY=1800000

# Features
VITE_ENABLE_DEBUG=false
VITE_ENABLE_ANALYTICS=false
VITE_MAX_FILE_SIZE=10485760
